


.goods_list_container {
  background: #eee;
}
.goods_list_container .title {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
}

.goods_list_container .more {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 20rpx;
  background: #f0f;
}

.goods_list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.goods_list:after {
  content: '';
  width: 350rpx;
}