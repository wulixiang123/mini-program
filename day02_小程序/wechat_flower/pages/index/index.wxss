/* 轮播图 */
.banners{
  width: 100%;
  height: 300rpx;
}

.banners image {
  width: 100%;
  height: 100%;
}

/* 导航列表 */
.nav_list { 
  flex-wrap: wrap;
}

.nav_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.nav_item image {
  width: 88rpx;
  height: 88rpx;
  margin: 20rpx 0;
}

.nav_item text {
  font-size: 26rpx;
  color: #333;
}

.nav_item.active image {
  width: 40rpx;
  height: 40rpx;
}